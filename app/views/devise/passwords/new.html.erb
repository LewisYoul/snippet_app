<div class="form--generic mt-8">
  <h1 class="text-center text-4xl">Forgot your password?</h1>
  <p class="text-center mt-2">Enter your email below and we'll send you instructions on how to reset your password</p>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "form--generic-form-sign-in-up" }) do |f| %>
    <%= render "shared/errors", resource: resource %>

    <div class="form--field">
      <%= f.label :email %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>

    <div class="actions">
      <%= f.submit "SEND RESET INSTRUCTIONS", class: "button--cta-primary w-full flex justify-center" %>
    </div>
  <% end %>

  <p class="text-center">Know your password? <%= link_to 'Sign in', new_user_session_path %></p>
</div>
