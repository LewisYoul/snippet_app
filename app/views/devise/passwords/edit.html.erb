<div class="form--generic">
  <h1 class="text-center"><%= link_to 'SNIPPET SAFE', root_path %></h1>
  <h1 class="text-center">Change your password</h1>
  <p class="text-center">Please enter and confirm your new password</p>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, class: "form--generic-form-sign-in-up" }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <%= f.hidden_field :reset_password_token %>

    <div class="form--field">
      <%= f.label :password, "New password" %>
      <%= f.password_field :password, autofocus: true, autocomplete: "new-password" %>
    </div>

    <div class="form--field">
      <%= f.label :password_confirmation, "Confirm new password" %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
    </div>

    <div class="actions">
      <%= f.submit "CHANGE PASSWORD", class: 'button--cta-primary' %>
    </div>
  <% end %>

