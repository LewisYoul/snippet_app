<%= render 'shared/user_admin', { header: @header, sub_header: @sub_header, footer: @footer } do %>

  <%= form_for @user, url: user_session_path, remote: true, html: { data: { controller: "sessions", type: "json", action: "ajax:success->sessions#onSignInSuccess ajax:error->sessions#onSignInError" } } do |f| %>
    <div class="form--field">
      <%= f.label :email, 'Email address' %>
      <%= f.email_field :email, autocomplete: "email", data: { sessions_target: 'email' } %>
    </div>

    <div class="form--field">
      <%= f.label :password %>
      <%= f.password_field :password, autocomplete: "current-password" %>
    </div>

    <div class="form--generic-remember-me">
      <div class="flex v-center" >
        <%= f.check_box :remember_me, checked: true %>
        <%= f.label :remember_me, class: "margin-left--tiny" %>
      </div>
      <%= link_to "Forgot your password?", new_user_password_path %>
    </div>

    <%= f.submit "SIGN IN", class: "button--cta-primary w-full flex justify-center" %>
  <% end %>

<% end %>
