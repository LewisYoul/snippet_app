<card>
  <h2 style="margin-top: 0px;"><%= @folder.name %></h2>
  <% @snippets.each_slice(4) do |snippets| %>
    <div style="display: flex; box-sizing: border-box;">
      <% snippets.each do |snippet| %>
        <%= link_to snippet_path(snippet), class: 'folders--list-item' do %>
          <img style="display: block; margin: 0 auto;" src="/icons/file.svg" width="28">
          <span class="folders--list-item--title"><%= snippet.description %></span>
        <% end %>
      <% end %>

      <% (4 - snippets.length).times do |i| %>
        <div style="height: 100px; flex: 1 0 25%; text-align: center;">
          <%# <%= link_to folder.name, folder_path(folder) %>
        </div>
      <% end %>
    </div>
  <% end %>
  <div class="folders--options-wrapper">
    <%= link_to 'NEW FOLDER', new_folder_path, class: 'button--cta-new' %>
    <%= link_to 'NEW SNIPPET', new_snippet_path, class: 'button--cta-new' %>
  </div>
</card>
