<div class="popover--container" data-target="popover.popover">
  <% @popover_options.each do |option| %>
    <% if option[:type] == :link %>
      <%= link_to option[:url], class: "popover--item", data: { controller: "popover", action: "mousedown->popover#retain_focus" } do %>
        <span><%= option[:title] %></span>
      <% end %>
    <% elsif option[:type] == :alert %>
      <div 
        data-controller="alert"
        data-action="click->alert#present"
        data-alert-url="<%= option[:url] %>"
        class="popover--item"
      >
        <span><%= option[:title] %></span>
      </div>
    <% else %>
      <div 
        data-controller="modal"
        data-action="click->modal#present"
        data-modal-url="<%= option[:url] %>"
        class="popover--item"
      >
        <span><%= option[:title] %></span>
      </div>
    <% end %>
  <% end %>
</div>
