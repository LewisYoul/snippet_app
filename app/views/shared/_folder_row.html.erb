<div class="folders--row">
  <% folders.each do |folder| %>
    <%= render partial: 'shared/folder', locals: { folder: folder } %>
  <% end %>

  <% (3 - folders.length).times do |i| %>
    <div style="height: 100px; flex: 1 0 31%; text-align: center; padding: 24px 8px;">
      <%# <%= link_to folder.name, folder_path(folder) %>
    </div>
  <% end %>
</div>
