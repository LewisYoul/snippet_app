<div id="header">
  <div id="header-nav-wrapper">
    <div id="header-nav" class="position-relative">
      <div class="flex v-center flex-1">
        <%= link_to root_path do %>
          <div class="border-radius-50" style="background-color: #3AAFA9; height: 40px; width: 40px;"></div>
        <% end %>
      </div>

      <div class="flex v-center">
        <% if user_signed_in? %>
          <%= render partial: 'shared/nav_item', locals: { path: root_path, icon: 'home' } %>
          <%= render partial: 'shared/nav_item', locals: { path: folders_path, icon: 'folder' } %>
          <%= render partial: 'shared/nav_item', locals: { path: snippets_path, icon: 'snippet' } %>
          <%= render partial: 'shared/nav_item', locals: { path: notifications_path, icon: 'bell' } %>
          <%= render partial: 'shared/nav_item', locals: { path: connect_path, icon: 'connect' } %>
        <% else %>
          <%= button_tag('SIGN IN', type: :button, class: "button--cta-blue", data: { controller: "modal", modal_url_value: sign_in_modals_users_path, action: "click->modal#present" }) %>
          <%= button_tag('SIGN UP', type: :button, class: "button--cta-transparent margin-left--tiny", data: { controller: "modal", modal_url_value: sign_up_modals_users_path, action: "click->modal#present" }) %>  
        <% end %>
      </div>

      <div class="flex v-center flex-1 flex-end">
        <% if user_signed_in? %>
          <%= link_to(new_modals_snippet_path, data: { controller: 'modal', action: 'modal#present', modal_url_value: new_modals_snippet_path }, class: "inline-flex items-center p-1 border border-transparent rounded-full shadow-sm text-white bg-cyan mr-2", title: "Add a new snippet")  do %>
            <%= image_tag "/icons/white/snippet-add.svg", width: 24 %>
          <% end %>
          <%= render partial: 'shared/profile_nav_item.html.erb' %>
        <% end %>
      </div>
    </div>
  </div>

  <%# <div class="flex h-center" style="margin-top: -14px; margin-bottom: -14px;">
    <div class="inline-block padding-left padding-right" style="background-color: white; z-index: 50; padding-top: 4px; padding-bottom: 4px; border-radius: 20px; background-color: #DEF2F1; box-shadow: 0 2px 2px lightgrey;">
      <h3 class="no-margin bold">page title</h3>
    </div>
  </div> %>
  <%# <div class="bg-grey" style="height: 16px;"></div> %>
</div>

<div id="header-spacer"></div>
