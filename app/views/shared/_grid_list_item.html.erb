<div
  class="relative px-4 py-5 sm:p-4 bg-white shadow rounded-sm cursor-pointer hover:shadow-md transition <%= defined?(classes) ? classes : '' %>"
  <% if defined?(id) %>
    id="<%= id %>"
  <% end %>
  data-controller="navigation"
  data-navigation-url-value="<%= url %>"
  data-action="click->navigation#navigate"
>
  <%= yield %>
</div>