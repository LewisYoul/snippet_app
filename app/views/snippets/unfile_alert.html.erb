<div class="alert-header">
  <h3 data-target="alert.header" id="alert-title">Unfile Snippet</h3>
  <span data-action="click->alert#close">
    <img class="alert-close" src="/icons/cancel.svg" width="22">
  </span>
</div>

<div class="alert-body">
  <span data-target="alert.body" id="alert-body">Are you sure you want to remove this snippet from your collection?</span>
</div>

<div class="alert-footer">
  <button data-action="click->alert#close" class="button--cta-cancel">
    CANCEL
  </button>

  <%= link_to( 
    'UNFILE',
    @confirm_path,
    method: :delete,
    remote: true,
    data: { toast_message: 'Snippet removed from collection!', action: 'ajax:success->alert#unfileSuccess' },
    class: "button--cta-new"
  ) %>
</div>
