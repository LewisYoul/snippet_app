<card>
  <user-profile
    :user="<%= @user.serialize.to_json %>"
    :is-following="<%= @following %>"
  />
</card>

<% @user.snippets.order(created_at: :desc).each do |snippet| %>
  <snippet-preview
    :key="<%= snippet.id %>"
    :snippet="<%= snippet.serialize(current_user).to_json %>">
  </snippet-preview>
<% end %>
